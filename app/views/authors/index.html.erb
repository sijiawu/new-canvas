<div class="row">


  <% if User.find_by(id: cookies[:user_id]) != nil %>
    <% if User.find_by(id: cookies[:user_id]).username == "admin" %>
      <div class="my-3">
        <%= link_to "Add a New Author", "/authors/new", class: 'btn btn-primary' %>
      </div>
    <% end %>
  <% end %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <% if User.find_by(id: cookies[:user_id]) != nil %>
          <% if User.find_by(id: cookies[:user_id]).username == "admin" %>
            <th></th>
            <th></th>
          <% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% Author.all.order('name').each do |author| %>
        <tr>
          <td><%= link_to author.name, "/authors/#{author.id}" %></td>
          <% if User.find_by(id: cookies[:user_id]) != nil %>
            <% if User.find_by(id: cookies[:user_id]).username == "admin" %>
              <td><%= link_to "[Edit]", "/authors/#{author.id}/edit" %></td>
              <td><%= link_to "[Delete]", "/authors/#{author.id}", method: 'delete' %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
