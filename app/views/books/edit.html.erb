<% book = Book.find_by(id: params["id"]) %>

<h1>Editing: <%= book.title %></h1>

<div class="row">
  <div class="col-sm-8">

    <%= form_tag "/books/#{book.id}", method: "patch" do %>

      <p>Title: <input value="<%= book.title %>" name="title" type="text" autofocus class="form-control"></p>
      <div class="form-group">
        <label for="summary">Summary: </label>
        <textarea class="form-control" name="summary" rows="4"><%= book.summary %></textarea>
      </div>
      <p>Cover: <input value="<%= book.cover_url %>" name="cover_url" type="text" class="form-control"></p>

      <p>Author:
          <select name="author_id" class="form-control">
            <% Author.order('name').each do |author| %>
              <option value="<%= author.id %>" <%= 'selected' if book.author_id == author.id %> >
                <%= author.name %>
              </option>
            <% end %>
          </select>
      </p>

      <button class="btn btn-primary">Update book</button>

    <% end %>

  </div>
</div>