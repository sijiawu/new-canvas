<% author = Author.find_by(id: params["id"]) %>

<h1>Editing <%= author.name %></h1>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/authors/#{author.id}", method: "patch" do %>

      <p>Name: <input value="<%= author.name %>" name="name" type="text" autofocus class="form-control"></p>

      <button class="btn btn-primary">Update author</button>

    <% end %>

  </div>
</div>
