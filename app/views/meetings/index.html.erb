  <% if User.find_by(id: cookies[:user_id]) != nil %>
    <% if User.find_by(id: cookies[:user_id]).username == "admin" %>
      <div class="my-3">
        <%= link_to "create new meeting", "/meetings/new", class: 'btn btn-primary', style: "color:white; background-color:#2c73b7;border-color:#2c73b7" %>
      </div>
    <% end %>
  <% end %>

  <ul class="list-group" style="margin-top: 10px">
    <% @meetings.each do |meeting| %>
    <li class="list-group-item">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-square-text" viewBox="0 0 16 16" style="margin-right: 10px">
        <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1h-2.5a2 2 0 0 0-1.6.8L8 14.333 6.1 11.8a2 2 0 0 0-1.6-.8H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h2.5a1 1 0 0 1 .8.4l1.9 2.533a1 1 0 0 0 1.6 0l1.9-2.533a1 1 0 0 1 .8-.4H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
        <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
      </svg>
      <%= link_to "Post your work for #{meeting.title} here", "/submissions/#{meeting.title}", {:class=>"meeting-title"} %>

      <% if User.find_by(id: cookies[:user_id]) != nil %>
        <% if User.find_by(id: cookies[:user_id]).username == "admin" %>
          <%= link_to "[Delete]", "/meetings/#{meeting.id}", method: "delete" %>
          <%= link_to "[Edit]", "/meetings/#{meeting.id}/edit" %>
        <% end %>
      <% end %>

    </li>
     <% end %>
  </ul>


 

